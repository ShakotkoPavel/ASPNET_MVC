@model IEnumerable<SA_ASP.NET_MVC_Practice.Models.Product>

@{
    ViewBag.Title = "List of products";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ShowList", "Product", FormMethod.Post))
{
    <div class="form-horizontal">
        @foreach (var item in Model)
        {
            <hr />
            <div class="form-group">
                @Html.Label("Product Id:", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.Label(item.ProductId.ToString());
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Name:", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.Label(item.Name.ToString());
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Price:", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.Label(item.Price.ToString());
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Type of product:", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.Label(item.ProductType.ToString());
                </div>
            </div>
        }
    </div>}